@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider DisableBackdropClick="true" CloseButton="true" MaxWidth="MaxWidth.Medium" Position="DialogPosition.TopCenter" FullWidth="true" />
<MudSnackbarProvider />

<MudLayout Style="background-color: white;">
    <MudAppBar Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
        <MudSpacer />
        <UserMenu />
    </MudAppBar>
    <MudDrawer @bind-Open="drawerOpen" Style="background-color: white">
        <MudDrawerHeader Style="padding: 0; max-height: 64px">
            <MudImage Src="assets/logohkt.jpg" Style="width: 100%; height: 100%; object-fit: cover;" />
        </MudDrawerHeader>
        <MudDrawerContainer>
            <NavMenu />
        </MudDrawerContainer>
    </MudDrawer>
    <MudMainContent Class="pt-4 pb-4">
        <MudContainer MaxWidth="MaxWidth.False" Class="pl-4 pr-4 mt-16" >
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>